<!-- history.xaml -->
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BVGF.Pages.history"
             x:Name="HistoryView">

    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section with Close Button -->
        <Grid Grid.Row="0" BackgroundColor="#00BCD4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="âœ•"
                    FontSize="20"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    Clicked="OnCloseClicked"/>

            <Label Grid.Column="1"
                   Text="History"
                   FontSize="18"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="10">
            <StackLayout>
                <!-- Table Header -->
                <Grid BackgroundColor="White" 
                      Padding="5"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Frame Grid.Column="0" 
                           BackgroundColor="#E0F7FA" 
                           Padding="8"
                           HasShadow="False">
                        <Label Text="Company/Name" 
                               FontAttributes="Bold"
                               TextColor="#00695C"
                               FontSize="12"/>
                    </Frame>

                    <Frame Grid.Column="1" 
                           BackgroundColor="#E0F7FA" 
                           Padding="8"
                           HasShadow="False">
                        <Label Text="Category/City" 
                               FontAttributes="Bold"
                               TextColor="#00695C"
                               FontSize="12"/>
                    </Frame>

                    <Frame Grid.Column="2" 
                           BackgroundColor="#E0F7FA" 
                           Padding="8"
                           HasShadow="False">
                        <Label Text="Mobile" 
                               FontAttributes="Bold"
                               TextColor="#00695C"
                               FontSize="12"/>
                    </Frame>

                    <Frame Grid.Column="3" 
                           BackgroundColor="#E0F7FA" 
                           Padding="8"
                           HasShadow="False">
                        <Label Text="Time" 
                               FontAttributes="Bold"
                               TextColor="#00695C"
                               FontSize="12"/>
                    </Frame>
                </Grid>

                <!-- Data Rows Container -->
                <StackLayout x:Name="HistoryContainer" BackgroundColor="White">

                    <!-- Sample Record 1 -->
                    <Grid BackgroundColor="#FAFAFA" Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Company Row -->
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Tech Solutions Pvt Ltd"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="#333"
                               Padding="5"/>

                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="IT Services"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="#333"
                               Padding="5"/>

                        <Label Grid.Row="0" Grid.Column="2" 
                               Text=""
                               FontSize="12"
                               Padding="5"/>

                        <!-- Time Cell (Merged) -->
                        <Frame Grid.Row="0" Grid.RowSpan="2" Grid.Column="3"
                               BackgroundColor="#F9F9F9"
                               Padding="5"
                               HasShadow="False">
                            <Label Text="3 hour ago"
                                   FontSize="10"
                                   TextColor="#666"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>

                        <!-- Person Row -->
                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="vivek"
                               FontSize="12"
                               TextColor="#555"
                               Padding="5"/>

                        <Label Grid.Row="1" Grid.Column="1" 
                               Text="Delhi"
                               FontSize="12"
                               TextColor="#555"
                               Padding="5"/>

                        <Label Grid.Row="1" Grid.Column="2" 
                               Text=""
                               FontSize="12"
                               TextColor="#00796B"
                               FontAttributes="Bold"
                               Padding="5"/>
                    </Grid>

                    <!-- Separator -->
                    <BoxView HeightRequest="2" BackgroundColor="#00BCD4"/>

                    <!-- More records can be added here -->

                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentView>